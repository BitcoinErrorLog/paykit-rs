{
  "name": "paykit-demo-web",
  "version": "0.1.0",
  "description": "Browser-based demo for Paykit payment protocol",
  "main": "index.js",
  "scripts": {
    "build": "wasm-pack build --target web --out-dir www/pkg",
    "build:release": "wasm-pack build --target web --release --out-dir www/pkg",
    "serve": "python3 -m http.server 8080 -d www",
    "dev": "npm run build && npm run serve",
    "clean": "rm -rf www/pkg target"
  },
  "keywords": [
    "paykit",
    "pubky",
    "wasm",
    "bitcoin",
    "lightning",
    "payments"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "wasm-pack": "^0.12.0"
  }
}

